---

interface Props {
  backgroundSrc: string;
}
---

<!-- <div class="temp-wrapper"> -->
  <section class="hero" style={`background-image: url(${Astro.props.backgroundSrc})`}>
    <div class="overlay">
      <slot name="header" />
      <article class="section article">
        <slot name="content" />
      </article>
    </div>
  </section>
<!-- </div> -->

<style>
  /* @todo TEMPORARY Remove when <AllGalleries /> is implemented */
  .temp-wrapper {
    inline-size: 100%;
    padding-inline: var(--spacing-base);
    padding-block: var(--spacing-far);
    padding-block-start: 0;
  }
  .hero {
    display: grid;
    grid: [cover] 1fr / [cover] 1fr;
    min-block-size: 60dvh;
    inline-size: 100%;
    border-radius: var(--border-radius-xl);
    border-start-start-radius: 0;
    border-start-end-radius: 0;
    corner-shape: squircle;
    background-color: var(--color-surface-subtle);
    background-size: cover;
    overflow: clip;
  }

  .background {
    inline-size: 100%;
    block-size: 100%;
    grid-area: cover;
    min-block-size: 0;

    & :global(> *) {
      inline-size: 100%;
      block-size: 100%;
      object-fit: cover;
      filter: blur(120px);
    }
  }

  .overlay {
    grid-area: cover;
    z-index: 1;
    display: grid;
    grid-template-rows: auto 1fr;
    inline-size: 100%;
    block-size: 100%;
    background: linear-gradient(
      to bottom,
      color-mix(in oklch, var(--color-surface-base), transparent 2%),
      color-mix(in oklch, var(--color-surface-base), transparent 12%),
      color-mix(in oklch, var(--color-surface-base), transparent 36%)
    );
    backdrop-filter: blur(60px);

    & :global(> *) {
      min-block-size: 0;
    }
  }

  .article {
    inline-size: min(1200px, 100%);
    padding-block: var(--spacing-far);
    margin-inline: auto;
    margin-block: auto;
    display: flex;
    flex-wrap: wrap;
    align-items: start;
    gap: var(--spacing-far);
  }
</style>
