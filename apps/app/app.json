{
  "expo": {
    "name": "readii-app",
    "slug": "readii-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/readii-icon.png",
    "scheme": "readiiapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/readii-adaptive-icon.png",
        "backgroundColor": "#261401"
      },
      "edgeToEdgeEnabled": true
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/readii-favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/readii-splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#261401"
        }
      ],
      "expo-sqlite",
      "expo-web-browser",
      "expo-video",
      "expo-font"
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
